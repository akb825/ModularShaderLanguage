uniform mat4 transform;

[[vertex]] in vec4 position;
[[vertex]] in vec4 color;

[[vertex]] out VertexOut
{
	vec4 color;
} outputs;

[[vertex]]
void vertShader()
{
	gl_Position = transform*position;
	outputs.color = color;
}

#include "CompileError.mslh"

pipeline Test
{
	vertex = vertShader;
	fragment = fragShader;
}
